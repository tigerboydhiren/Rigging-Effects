proc addJointsproc()
{
curve -d 1 -p `getAttr backLocator1.tx` `getAttr backLocator1.ty` `getAttr  backLocator1.tz` -p `getAttr backLocator7.tx` `getAttr backLocator7.ty` `getAttr  backLocator7.tz` -k 0 -k 1 ;
curve -d 1 -p `getAttr leftElbowLocator.tx` `getAttr leftElbowLocator.ty` `getAttr  leftElbowLocator.tz` -p `getAttr leftWristLocator.tx` `getAttr leftWristLocator.ty`  `getAttr leftWristLocator.tz` -k 0 -k 1 ;
	rename "curve1" "spineCurve";
	rename "curve2" "forearmCurve";

plotEquidistantLocatorsOnCurve( "spineCurve", 7 );
plotEquidistantLocatorsOnCurve( "forearmCurve", 4 );

delete locator1;
delete locator7;
delete locator8;
delete locator11;

rename "locator2" "backLocator2_sub";
rename "locator3" "backLocator3_sub";
rename "locator4" "backLocator4_sub";
rename "locator5" "backLocator5_sub";
rename "locator6" "backLocator6_sub";

rename "locator9" "forearmLocator1_sub";
rename "locator10" "forearmLocator2_sub";

	CreateLocator;
		rename "locator1" "backLocator2";
		setAttr backLocator2.tx `getAttr backLocator2_subShape.localPositionX`;
		setAttr backLocator2.ty `getAttr backLocator2_subShape.localPositionY`;
		setAttr backLocator2.tz `getAttr backLocator2_subShape.localPositionZ`;
	
	CreateLocator;
		rename "locator1" "backLocator3";
		setAttr backLocator3.tx `getAttr backLocator3_subShape.localPositionX`;
		setAttr backLocator3.ty `getAttr backLocator3_subShape.localPositionY`;
		setAttr backLocator3.tz `getAttr backLocator3_subShape.localPositionZ`;

	CreateLocator;
		rename "locator1" "backLocator4";
		setAttr backLocator4.tx `getAttr backLocator4_subShape.localPositionX`;
		setAttr backLocator4.ty `getAttr backLocator4_subShape.localPositionY`;
		setAttr backLocator4.tz `getAttr backLocator4_subShape.localPositionZ`;

	CreateLocator;
		rename "locator1" "backLocator5";
		setAttr backLocator5.tx `getAttr backLocator5_subShape.localPositionX`;
		setAttr backLocator5.ty `getAttr backLocator5_subShape.localPositionY`;
		setAttr backLocator5.tz `getAttr backLocator5_subShape.localPositionZ`;

	CreateLocator;
		rename "locator1" "backLocator6";
		setAttr backLocator6.tx `getAttr backLocator6_subShape.localPositionX`;
		setAttr backLocator6.ty `getAttr backLocator6_subShape.localPositionY`;
		setAttr backLocator6.tz `getAttr backLocator6_subShape.localPositionZ`;

	CreateLocator;
		rename "locator1" "leftForearmLocator1";
		setAttr leftForearmLocator1.tx `getAttr  forearmLocator1_subShape.localPositionX`;
		setAttr leftForearmLocator1.ty `getAttr  forearmLocator1_subShape.localPositionY`;
		setAttr leftForearmLocator1.tz `getAttr  forearmLocator1_subShape.localPositionZ`;

	CreateLocator;
		rename "locator1" "leftForearmLocator2";
		setAttr leftForearmLocator2.tx `getAttr  forearmLocator2_subShape.localPositionX`;
		setAttr leftForearmLocator2.ty `getAttr  forearmLocator2_subShape.localPositionY`;
		setAttr leftForearmLocator2.tz `getAttr  forearmLocator2_subShape.localPositionZ`;


select -r backLocator2_sub backLocator3_sub backLocator4_sub backLocator5_sub  backLocator6_sub forearmLocator1_sub forearmLocator2_sub ;
delete;
select -r spineCurve forearmCurve ;
delete;

select -cl  ;
select -r backLocator2 backLocator3 backLocator4 backLocator5 backLocator6  leftForearmLocator1 leftForearmLocator2 ;
select -add locatorGRP ;
parent;

//we are now going to duplicate the limbs to the other side

select -cl  ;
select -r leftHeelLocator leftHipLocator leftKneeLocator leftAnkleLocator leftBallLocator  leftToeLocator leftCollarBoneLocator leftShoulderLocator leftElbowLocator  leftWristLocator leftHandLocator leftPalmLocator leftMiddleKnuckleLocator  leftMiddle1Locator leftMiddle2Locator leftMiddleTipLocator leftIndexKnuckleLocator  leftIndex1Locator leftIndex2Locator leftIndexTipLocator leftRingKnuckleLocator  leftRing1Locator leftRing2Locator leftRingTipLocator leftPinkyCupLocator  leftPinkyKnuckleLocator leftPinky1Locator leftPinky2Locator leftPinkyTipLocator  leftThumbKnuckleLocator leftThumb1Locator leftThumb2Locator leftThumbTipLocator  leftForearmLocator1 leftForearmLocator2 ;

duplicate;

	string $sel[] = `ls -sl`;
	string $current;
		for ($current in $sel)
		{
			float $fMinor = (-`getAttr ($current + ".tx")`);
			setAttr ($current + ".tx") $fMinor ;

			string $afterTokenize[];
			tokenize($current, "t", $afterTokenize);
			rename $current ("right" + $afterTokenize[1] + "t" +  $afterTokenize[2]);
		}

	string $sel[] = `ls -sl`;
	string $current;
		for ($current in $sel)
			{
			string $afterTokenize1[];
			tokenize($current, "1", $afterTokenize1);
			rename $current ($afterTokenize1[0]);
			}

rename "rightWristLoca" "rightWristLocator" ;
rename "rightMiddle" "rightMiddle1Locator" ;
rename "rightIndex" "rightIndex1Locator" ;
rename "rightRing" "rightRingLocator" ;
rename "rightPinky" "rightPinky1Locator" ;
rename "rightThumb" "rightThumb1Locator" ;
rename "rightForearmLocator3" "rightForearmLocator1";
rename "rightForearmLocator4" "rightForearmLocator2";

addingInTheJoints;

if (`window -exists autoRig_04`) 
 	 deleteUI autoRig_04; 
		window -rtf on -title "Shane's Auto Rigger" autoRig_04; 
		columnLayout;
  		deleteUI autoRig_03; 

		text -label "If you only want the bone structure  ";
		text -label "and nothing else quit here.";
		text -label "Otherwise continue on to create curves";
		text -label "";

		button -w 200 -label " Create Curves " - command "createCurvesAndIK" curvesAndIKButton;

		showWindow autoRig_04;
}








